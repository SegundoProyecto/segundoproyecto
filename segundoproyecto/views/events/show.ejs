<div class="container event-container">
  <div class="row">
    <div class="col-sm-2">
      <img src="https://lh3.ggpht.com/DL2tCAHdVPT0Y4OgSkTFOCv4WEqqB8RJQsCQvIq2ogG42Qisvj2HFl1Yh420XttfRkRY=w128"><br>
      Evento creado por:  <strong><%= event.creatorId.username %></strong>
    </div>
    <div class="col-sm-10">
      <h1><%= event.title %></h1>
      <h2 class="event-category"><%= event.category %></h2>
      <p class="event-description"><%= event.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <img class="event-image" src="<%= event.image %>">
    </div>
    <div class="col-sm-4 event-info">
      <div class="event-progress">
        <progress value="<%= event.totalPledged %>" max="<%= event.goal %>"></progress>
      </div>
      <div class="event-pledged">
        <span class="event-total">$<%= event.totalPledged %></span><br>
        <span class="light-text">
          pledged of <%= event.goal %>€</span>
        </span>
      </div>
      <div class="event-backers">
        <strong class="large-strong"><%= event.backerCount %></strong><br>
      </div>
      <div class="event-backers">
          <strong class="large-strong"><%= event.backerCount %></strong><br>
          <span class="light-text">backers</span>
        </div>
        <div class="event-time">
          <strong class="large-strong"><%= event.timeRemaining %></strong><br>
        </div>
        <a class="btn backr-btn back-it" 
           href="/home/<%= event._id%>"
           data-id="<%= event._id %>"
           data-pledge="5">
           Quiero unirme <%= event.goal %> €</a>
           <br>
           <br>
           <br>
           <br>
           <% if(user._id.equals(event.creatorId._id)) { %>
            <a class="btn btn-primary" href="/home/<%= event._id%>/edit">Editar</a>
          <% } %>
          <br>
          <br>
      <a href="/home">Volver a la Página Principal</a><br>
    </div>
  </div>
</div>