<div style="margin-top: 50px;">

  
  <div class="container event-container">
    <div class="row">
      Evento creado por:
      <strong>
        <%= evento.creatorId.username %>
      </strong>
    </div>
    <div class="col-sm-10">
      <h1>
        <%= evento.title %>
      </h1>
      <h2 class="event-category">
        <%= evento.category %>
      </h2>
      <p class="event-description">
        <%= evento.description %>
      </p>
    </div>
  </div>
  <div class="row">
    <style>
      #map {
        height: 400px;
        width: 600px
      }
    </style>
    <div id="map">
    </div>
    <br></br>
  </div>
  <div class="mercenario">
      <%= evento.lat %>
      <%= evento.log %>
  </div>
  <div class="col-sm-4 event-info">
    <div class="event-pledge">
      <span class="event-total">
        <%= evento.currentPeople.length %> de
          <%= evento.totalPeople %>
      </span>
    </div>
    <div class="event-time">
      <strong class="large-strong">
        <%= evento.timeRemaining %>
      </strong>
      <br>
    </div>
    <% if(evento.currentPeople.length < evento.totalPeople) { %>
      <a class="btn  btn-success" href="/home/<%= evento._id%>/gracias">¡Quiero unirme!</a>
      <% }else{ %>
        <h2>EVENTO COMPLETO</h2>
        <% } %>

          <br>
          <br>
          <% if(user._id.equals(evento.creatorId._id)) { %>
            <a class="btn btn-primary" href="/home/<%= evento._id%>/edit">Editar</a>
            <% } %>
              <br>
              <br>
              <a class="btn btn-primary" href="/home">Volver a la Página Principal</a>
  </div>
</div>
</div>
