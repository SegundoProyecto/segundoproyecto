<div style="margin-top: 50px;">


  <div class="container center-block">
    <div class="row">
      <div class=" centered-form">
        <div class="col-sm-6">
        <form action="/home/new" method="post">
          <div class="form-group">
            <input id="lat" name="lat" placeholder="Latitude" style="visibility:hidden">
            <input id="lon" name="log" placeholder="Longitude" style="visibility:hidden">
            <label for="title">Título</label>
            <input type="text" name="title" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="totalPeople">¿Cuantas personas se pueden unir?</label>
            <input type="number" name="totalPeople" class="form-control" required>
          </div>
          <div class="form-group">
            <label for="description">Descripción</label>
            <textarea id="description" name="description" class="form-control" required></textarea>
          </div>
          <div class="form-group">
            <label for="category">Categorias</label>
            <br>
            <select name="category" id="category" multiple class="form-control" required>
              <% types.forEach((category) => { %>
                <option type="text" value="<%= category %>">
                  <%= category %>
                </option>
                <%  }) %>
            </select>
          </div>
          <div  class="form-group">
            <label for="deadline">¿Qué día es tu evento?</label>
            <input type="date" name="deadline" class="form-control" required>
          </div>
        </div>
           <div class="col-sm-6">
            <style>
              #map {
                height: 400px;
                width: 100%;
              }
            </style>
            <input id="pac-input" class="controls" type="text" placeholder="Lugar" required>
            <div id="map"></div>
            <br></br>
          </div>
          <div class="form-group lanzar">
            <button type="submit" class="btn btn-success ">¡Lanzar evento!</button>
          </div>
      </form>
    </div>
  </div>
</div>

