<head>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<div id="login">
  <div class="page-header">
    <img src="https://s3.amazonaws.com/media-p.slid.es/uploads/820044/images/4613607/Untitled-4.png" alt="" width="50%">
    <h1>
      <small>Sign Up</small>
    </h1>
  </div>
  <div class="cuadro">
  <form action="/auth/signup" method="POST" id="form-container">
    <div id="recuadro">
      <div class="form-group">
        <input class="form-control" placeholder="Username" name="username" type="text" required>
      </div>
      <div class="form-group">
        <input  class="form-control  formulario" placeholder="Password" name="password" type="password" required>
      </div>
    </div>
  </div>
    <% if (typeof message !== "undefined") { %>
      <div class="error-message">
        <%= message %>
      </div>
      <% } %>
        <button type="submit" class="btn btn-default" value="Log In">Sign Up</button>
        <p class="account-message">
          Ya tienes una cuenta?
          <a href="/auth/login">Login</a>
        </p>
        <br>
  </form>

  <a href="/">Go Home</a>
</div>